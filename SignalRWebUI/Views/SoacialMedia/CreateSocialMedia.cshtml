@model CreateSocialMediaDto
@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Sosyal MEDYA İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Sosyal Medya Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="Title">Başlık Giriniz</label>
							<input type="text" class="form-control" asp-for="Title" id="Title">

						</div>
						<div class="form-group">
							<label for="Icon">Ikon GİRİNİZ Giriniz</label>
							<input type="text" class="form-control" asp-for="Icon" id="Icon">

						</div>
						<div class="form-group">
							<label for="Url">URL  Giriniz</label>
							<input type="text" class="form-control" asp-for="Url" id="Url">

						</div>



					</div>
					<div class="card-action">
						<button class="btn btn-success">Sosyal Medya Ekle</button>

					</div>
				</div>
			</form>
		</div>

	</div>
</div>

