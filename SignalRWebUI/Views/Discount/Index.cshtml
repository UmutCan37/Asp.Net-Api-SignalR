@model List<SignalRWebUI.Dtos.DiscountDtos.ResultDiscountDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Günün İndirimleri İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title"> İndirim İşlemleri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Günün İndirimleri ile ilgili işlemleri gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Ürün</th>
									<th scope="col">İndirim Oranı</th>
									<th scope="col">İndirim Durumu</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach (var item in Model)
								{
									<tr>
										<td>@item.DiscountID</td>
										<td>@item.Title</td>
										<td>@item.Amount</td>
										<td><a href="\Discount\DeleteDiscount/@item.DiscountID" class=" btn btn-outline-warning">Durumu Değiştir</a></td>
										<td><a href="\Discount\DeleteDiscount/@item.DiscountID" class=" btn btn-outline-danger">Sil</a></td>
										<td><a href="\Discount\UpdateDiscount/@item.DiscountID" class=" btn btn-outline-success">Güncelle</a></td>
									</tr>
								}



							</tbody>
						</table>
						<a href="\Discount\CreateDiscount" class="btn btn-outline-primary">Yeni  Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>