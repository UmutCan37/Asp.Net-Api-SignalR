@model UpdateTestimonialDto
@{
	ViewData["Title"] = "UpdateTestimonial";
	Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="container-fluid">
	<h4 class="page-title">Müşteri Yorum İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Müşteri Yorum İşlemleri</div>
					</div>
					<div class="card-body">
						<input type="hidden" asp-for="TestimonialId" />
						<div class="form-group">
							<label for="TestimonialName">Müşteri Adını Giriniz</label>
							<input type="text" class="form-control" asp-for="TestimonialName" id="TestimonialName">

						</div>
						<div class="form-group">
							<label for="Title">Müşteri Ünvanın Giriniz</label>
							<input type="text" class="form-control" asp-for="Title" id="Title">

						</div>
						<div class="form-group">
							<label for="ImageUrl">Müşteri resmi  Giriniz</label>
							<input type="text" class="form-control" asp-for="ImageUrl" id="ImageUrl">

						</div>
						<div class="form-group">
							<label for="Comment">Müşteri yorumunu  Giriniz</label>
							<input type="text" class="form-control" asp-for="Comment" id="ImageUrl">

						</div>




					</div>
					<div class="card-action">
						<button class="btn btn-success">Yorumu Ekle</button>

					</div>
				</div>
			</form>
		</div>

	</div>
</div>