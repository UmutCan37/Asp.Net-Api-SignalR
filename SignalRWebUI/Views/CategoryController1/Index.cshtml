@model List<SignalRWebUI.Dtos.CategoryDtos.ResultCategoryDtos>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}

<div class="content">
	<div class="container-fluid">
		<h4 class="page-title">Hakkımda İşlemleri</h4>
		<div class="row">
			<div class="col-md-12">

				<div class="card">
					<div class="card-header">
						<div class="card-title">Kategori İşlemleri</div>
					</div>
					<div class="card-body">
						<div class="card-sub">
							Kategori ile ilgili işlemleri gerçekleştirebilirsiniz.
						</div>
						<table class="table mt-3">
							<thead>
								<tr>
									<th scope="col">#</th>
									<th scope="col">Kategori Adı</th>
									<th scope="col">Durum</th>
									<th scope="col">Güncelle</th>
								</tr>
							</thead>
							<tbody>
								@foreach(var item in Model)
								{
									<tr>
										<td>@item.CategoryId</td>
										<td>@item.CategoryName</td>
										<td>@item.Status</td>
										<td><a href="\CategoryController1\DeleteCategory/@item.CategoryId" class=" btn btn-outline-danger">Sil</a></td>
										<td><a href="\CategoryController1\UpdateCategory/@item.CategoryId" class=" btn btn-outline-success">Güncelle</a></td>
									</tr>
								}

								
								
							</tbody>
						</table>
						<a href="\CategoryController1\CreateCategory" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
					</div>
				</div>


			</div>

		</div>
	</div>
</div>

