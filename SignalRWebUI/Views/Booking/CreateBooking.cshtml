@model SignalRWebUI.Dtos.BookingDtos.CreateBookingDto
@{
    ViewData["Title"] = "CreateBooking";
    Layout = "~/Views/AdminLayoutController1/Index.cshtml";
}
<div class="container-fluid">
	<h4 class="page-title">Rezervasyon İşlemleri</h4>
	<div class="row">
		<div class="col-md-12">
			<form method="post">
				<div class="card">
					<div class="card-header">
						<div class="card-title">Yeni Rezervasyon Girişi</div>
					</div>
					<div class="card-body">
						<div class="form-group">
							<label for="Name"> Adını Giriniz</label>
							<input type="text" class="form-control" asp-for="Name" id="Name">

						</div>
						<div class="form-group">
							<label for="Phone">Rezervasyon Telfonununuz Giriniz</label>
							<input type="text" class="form-control" asp-for="Phone" id="Phone">

						</div>
						<div class="form-group">
							<label for="Mail">Mail Giriniz</label>
							<input type="text" class="form-control" asp-for="Mail" id="Mail">

						</div>
						<div class="form-group">
							<label for="PersonCount">Kişi SAYISI Giriniz</label>
							<input type="text" class="form-control" asp-for="PersonCount" id="PersonCount">

						</div>
						<div class="form-group">
							<label for="Date">Tarihi Giriniz</label>
							<input type="date" class="form-control" asp-for="Date" id="Date">

						</div>



					</div>
					<div class="card-action">
						<button class="btn btn-success">Rezervasyon Ekle</button>

					</div>
				</div>
			</form>
		</div>

	</div>
</div>

